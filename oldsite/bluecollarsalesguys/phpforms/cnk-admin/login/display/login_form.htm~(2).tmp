<!-- Login form -->
<form action="<#clean_url#>" method="POST" name="LOGIN_FORM" autocomplete="off">
<input type="hidden" name="act" value="login">
<input type="hidden" name="code" value="01">

 <table border="0" height="90%" width="100%" cellpadding="0" cellspacing="0" class="wrapper">
   <tr>
     <td>

       <table border="0" width="100%" cellpadding="0" cellspacing="0">
         <tr>
           <td align="center" vAlign="middle">

              <table border="0" width="400px" bgColor="#adadad" cellpadding="0" cellspacing="4" class="ext_box">

                <tr height="25">
                  <td align="center">
                      <span class="header_font"><#L_head_login_form#></span>
                  </td>
                </tr>

                <tr height="25">
                  <td class="inner_box">
                    <table border="0" width="100%" cellpadding="0" cellspacing="4" bgColor="#d2d2d2" class="ext_box">
       <#error_login#>
                      <tr>
                         <td width="40%" style="border-bottom : solid 1px #606A75; border-right: solid 1px #606A75;">
                           <#L_login_user_name#>
                         </td>
                         <td width="*" align="center">
                           <input style="width: 100%;" type="text" tabIndex="1" name="input_login" id="input_login" value="<#default_login#>">
                         </td>
                      </tr>
                      <tr>
                         <td width="40%" style="border-right: solid 1px #606A75;">
                           <#L_login_user_pass#>
                         </td>
                         <td width="*" align="center">
                           <input style="width: 100%;" type="password" tabIndex="2" name="input_pass">
                         </td>
                      </tr>
                    </table>
                  </td>                         
                </tr>

                <tr height="30px">
                  <td align="center" vAlign="middle">
                    <input class="cnk_btn" type="submit" value="<#L_login_submit#>">
                  </td>
                </tr>

              </table>
             </td>
          </tr>
          <tr>
             <td align="center" vAlign="middle">
               <span class="app_info">
                 <a class="extlnk" href='http://phpforms.net'><#APP_NAME#></a>, v<#APP_VERSION#><br>
		 <!-- Fix Version: <#APP_VERSION_FIX#> -->
                 Copyright <#APP_COPYRIGHT#>
               </span>
             </td>
          </tr>
       </table>

     </td>
   </tr>

 </table>

</form>
<!-- / Login form -->
